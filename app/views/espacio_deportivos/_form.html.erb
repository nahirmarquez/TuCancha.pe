<%= form_for(@espacio_deportivo) do |f| %>
  <% if @espacio_deportivo.errors.any? %>
    <ul data-role="listview"  style="padding-top:25px; padding-left:25px; width:60%;"%>
    <li data-role="list-divider" style= "background:red">Se encontraron <%=@espacio_deportivo.errors.count%> error(es) en validaciones:</li>

      <% @espacio_deportivo.errors.full_messages.each do |msg| %>
        <li style="font-size:12px; padding:3px;border-top-width: 0px; background-image:none;"><%= msg %></li>
      <% end %>
  </ul>
  <br><br>
  <% end %>



  <fieldset data-role="controlgroup" data-type="horizontal">
    <legend>Nombre</legend>
    <%= f.text_field :nombre %>
  </fieldset>
  <fieldset data-role="controlgroup" data-type="horizontal">
    <legend>Costo</legend>
    <%= f.text_field :costo %>
  </fieldset>
  <fieldset data-role="controlgroup" data-type="horizontal">
    <legend>Capacidad</legend>
    <%= f.number_field :capacidad %>
  </fieldset>
  <fieldset data-role="controlgroup" data-type="horizontal">
    <legend>Descripci√≥n</legend>
    <%= f.text_field :descripcion %>
  </fieldset>
  <fieldset data-role="controlgroup" data-type="horizontal">
    <legend>Local Deportivo</legend>
    <%= f.text_field :local_deportivo_nombre, :value =>@local_deportivo.nombre, :disabled=>"disabled"  %>
  </fieldset>
    
    <%= f.hidden_field :local_deportivo_id, :value=>@local_deportivo.id %>
    
  
  <div class="actions">
    <%= f.submit 'Guardar', 'data-icon'=>'check', 'data-theme'=>'b' %>
  </div>
<% end %>
